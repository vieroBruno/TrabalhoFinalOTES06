<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/cityInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        android:hint="Digite uma cidade"
        android:textSize="16sp"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_search"
        android:inputType="text"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityInput"
        android:layout_marginTop="5dp"
        android:text="Pesquisar"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/btnSearch"
        android:layout_alignParentBottom="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <TextView
            android:id="@+id/resultView"
            android:layout_below="@id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="--"
            android:textSize="30sp"
            android:textColor="#F2F2F2"
            android:letterSpacing="0.02"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/temperature"
            android:layout_below="@id/resultView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="--°"
            android:textColor="#F2F2F2"
            android:textSize="88sp"
            android:textStyle="normal"
            android:letterSpacing="0.01"
            android:textAlignment="center"
            />
        <TextView

            android:id="@+id/weatherDescription"
            android:layout_below="@id/temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Sem informações"
            android:textSize="20sp"
            android:textColor="#D0D0D0"
            android:letterSpacing="0.01"
            android:textStyle="normal"
            android:textAlignment="center"
            />

        <LinearLayout
            android:id="@+id/minMaxTemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/weatherDescription"
            android:layout_marginTop="16dp">




            <TextView
                android:id="@+id/maxTemperatureText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Máx.: --°"
                android:textColor="#CFCFCF"
                android:textSize="18sp"
                />


            <TextView
                android:id="@+id/minTemperatureText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Mín.: --°"
                android:textColor="#CFCFCF"
                android:textSize="18sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/feelsLikeContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/minMaxTemperature"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/feelsLikeIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_feels_like"
                android:tint="#CFCFCF" />

            <TextView
                android:id="@+id/feelsLikeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensação:"
                android:textColor="#CFCFCF"
                android:textSize="18sp"

                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/feelsLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--°"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/humidityAndVisibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/feelsLikeContainer"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">


            <LinearLayout
                android:id="@+id/visibilityCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/card_translucent"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_visibility"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:tint="@color/white"/>

                    <TextView
                        android:text="Visibilidade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/visibilityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="-- km"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
            </LinearLayout>


            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:id="@+id/humidityCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/card_translucent"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_humidity"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:tint="@color/white"/>

                    <TextView
                        android:text="Humidade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/humidityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="--%"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sunriseAndSunset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/humidityAndVisibility"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/sunriseCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/card_translucent"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/sunrise"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                    />

                    <TextView
                        android:text="Nascer do sol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/sunriseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="--"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
            </LinearLayout>


            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:id="@+id/sunsetCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/card_translucent"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/sunset"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        />

                    <TextView
                        android:text="Pôr do sol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/white" />
                </LinearLayout>

                <TextView
                    android:id="@+id/sunsetText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="--"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pressureAndWind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/sunriseAndSunset"
            android:layout_marginTop="0dp"
            android:padding="16dp">


            <LinearLayout
                android:id="@+id/pressureCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/card_translucent"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_pressure"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:tint="@color/white"/>

                    <TextView
                        android:text="Pressão"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/pressureText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="-- Bar"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/windCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/card_translucent"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/wind"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:tint="@color/white"/>

                    <TextView
                        android:text="Vento (km/h)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/windText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="--"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
